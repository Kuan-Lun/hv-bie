{
  // --- Python 分析設定 ---
  // 關閉 Pylance 型別檢查，統一由 mypy 負責（Pylance 仍提供補完/跳轉等語言服務）。
  "python.analysis.typeCheckingMode": "off",
  // --- 格式化設定 ---
  // 使用 Black 作為唯一 formatter（僅作用於 Python）。
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  // --- Ruff（原生語言伺服器）---
  // 規則放在 pyproject.toml（例如啟用 I 規則以檢查/排序 imports）。
  // 儲存時自動修正可安全修改的問題（含 imports 排序）。
  "editor.codeActionsOnSave": {
    "source.fixAll.ruff": "always"
  },
  // --- 一般編輯偏好 ---
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.rulers": [
    88
  ],
  "flake8.args": [
    "--max-line-length=88",
    "--ignore=E501,W503"
  ]
}
